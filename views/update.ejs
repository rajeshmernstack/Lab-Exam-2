<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.1.0/mdb.min.css" rel="stylesheet" />
    <title>All Users</title>
</head>

<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2>Update Form</h2>
            </div>
        </div>
        <% console.log(data) %>
        <div class="row">
            <div class="col-md-12">
                <form action="/register" method="POST" enctype="multipart/form-data">
                    <div class="card float-start border me-3">
                        <div class="card-body shadow-5">
                            <div class="text-center">
                                <img src="../images/<%= data[0].avatar %>" alt=""
                                    style="width: 125px; height: 125px" class="rounded-circle m-5" />
                                <input type="file" class="form-control" name="avatar" required />
                            </div>

                        </div>
                    </div>
                    <div class="card border">
                        <div class="card-body shadow-5">
                            <div class="row mt-3">
                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="fullname" name="fullname" class="form-control" value="<%= data[0].fullname %>" required />
                                        <label class="form-label" for="fullname">Fullname</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">
                                        <input type="email" id="email" name="email" class="form-control" value="<%= data[0].email %>" required />
                                        <label class="form-label" for="email">Email address</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="phone" name="phone" class="form-control" value="<%= data[0].phone %>" required />
                                        <label class="form-label" for="phone">Phone Number</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <select name="country" class="browser-default custom-select form-control " value="<%= data[0].country %>">
                                        <option value="pakistan" selected>Pakistan</option>
                                        <option value="india">India</option>
                                        <option value="usa">USA</option>
                                      </select>
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="state" name="state" class="form-control" value="<%= data[0].state %>" required />
                                        <label class="form-label" for="state">State/Region</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="city" name="city" class="form-control" value="<%= data[0].city %>" required />
                                        <label class="form-label" for="city">City</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-4 mb-3">
                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="address" name="address" class="form-control" value="<%= data[0].address %>" required />
                                        <label class="form-label" for="address">Address</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">
                                        <input type="number" id="zipcode" name="zipcode" class="form-control" value="<%= data[0].zipcode %>" required />
                                        <label class="form-label" for="zipcode">ZipCode</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-5 mb-3">
                                <div class="col-md-2 offset-md-9">
                                    <input type="submit" class="btn btn-primary" value="Update User" required />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.1.0/mdb.min.js"></script>

</body>

</html>